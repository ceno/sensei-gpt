{
  "name": "SenseiGPT",
  "version": "0.2.0",
  "description": "Select Japanese text on a webpage and get an explanation of its meaning generated by ChatGPT.",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting","storage"],
  "host_permissions": ["https://api.openai.com/*"],
  "action": {
    "default_title": "Display explanation",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      }
    }
  }
}
